<div class="info">
  <h2><%= @portfolio.name %></h2>
  <table class="table table-striped table-condensed">
    <tbody>
      <tr>
        <th>Current Value:</th>
        <td>$<%= @portfolio.current_value %></td>
      </tr>
      <tr>
        <th>Cost Basis:</th>
        <td>$<%= @portfolio.cost_basis %></td>
      </tr>
      <tr>
        <th>Change:</th>
        <td>$<%= @portfolio.net_profit %></td>
      </tr>
      <tr>
        <th>Change%:</th>
        <td><%= @portfolio.percent_change %>%</td>
      </tr>
    </tbody>
  </table>
</div>


<table class="table table-striped table-condensed">
  <thead>
    <th>Name</th>
    <th>Current Price</th>
    <th>Number of Shares</th>
    <th>Total Value</th>
    <th>Cost Basis</th>
    <th>Change</th>
    <th>Change%</th>
  </thead>
  <tbody>
  <% @portfolio.stocks.each do |stock| %>
    <tr>
      <td><%= link_to "#{stock.symbol}", stock_path(stock.symbol) %></td>
      <td> $<%= stock.current_price %> </td>
      <td> <%= stock.volume %> </td>
      <td> $<%= stock.current_value %> </td>
      <td> $<%= stock.cost_basis %> </td>
      <td>$<%= stock.net_profit %> </td>
      <td> <%= stock.percent_change %> </td>
      <td> <%= link_to "Sell", sell_path(stock), class: "btn btn-primary" %>
    </tr>
  <% end %>
  </tbody>
</table>
