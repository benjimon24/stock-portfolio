<h1> Edit Portfolio </h1>

<%= form_for @portfolio, url: portfolio_path(@portfolio), method: :put do |f| %>

  <%= render partial: '/partials/errors' %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit "Update Portfolio" %>
  </p>
<% end %>

<%= link_to 'Back', portfolios_path %>
