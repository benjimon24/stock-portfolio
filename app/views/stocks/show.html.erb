<script src="/js/application.js"></script>

<div class="container-fluid">
  <% if @stock %>
  <div class="stock-info">

    <div class="info block">
      <h2><%= @stock['Name']%> (<%=@stock['symbol']%>)<br> </h2>
      
      <table class="table table-striped table-condensed">
        <tbody>
          <tr>
            <td>Open:</td>
            <td>$<%= @stock['Open'] %></td>
          </tr>
          <tr>
            <td>Ask Price:</td>
            <td>$<%= @stock['Ask'] %></td>
          </tr>
          <tr>
            <td>Bid Price:</td>
            <td>$<%= @stock['Bid'] %></td>
          </tr>
          <tr>
            <td>Days Low:</td>
            <td>$<%= @stock['DaysLow'] %>%</td>
          </tr>
          <tr>
            <td>Days High:</td>
            <td>$<%= @stock['DaysHigh'] %>%</td>
          </tr>
          <tr>
            <td>Year Low:</td>
            <td>$<%= @stock['YearLow'] %>%</td>
          </tr>
          <tr>
            <td>Year High:</td>
            <td>$<%= @stock['YearHigh'] %>%</td>
          </tr>
          <tr>
            <td>Change:</td>
            <td><%= @stock['Change']%></td>
          </tr>
          <tr>
            <td>Change%:</td>
            <td class="percent-change"><%= @stock['PercentChange']%></td>
          </tr>
        </tbody>
      </table>

      <% if !current_user.portfolios.empty? %>
      <%= link_to "Buy", buy_path(@stock['symbol']), class: "btn btn-primary" %>
      <% end %>
    </div>

  </div>

  <% if !@portfolios.empty? %>
  <h1>Here are your portfolios containing this stock:</h1>

  <div class="row">
    <% @portfolios.each do |portfolio| %>
    <% stock= portfolio.stocks.find_by(symbol: "#{@stock['symbol']}") %>
    <div class='col-sm-6 col-md-4'>
      <div class="card my-3">
        <div class="card-block">
          <h4> <%= link_to portfolio.name, portfolio_path(portfolio.id) %> </h4>
          <table class="table table-striped table-condensed">
            <tbody>
              <tr>
                <th>Purchase Price:</th>
                <td>$<%= stock.buy_price %></td>
              </tr>
              <tr>
                <th>Number of Shares:</th>
                <td><%= stock.volume %></td>
              </tr>
              <tr>
                <th>Cost Basis:</th>
                <td>$<%= stock.cost_basis %></td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="card-footer">
          <%= link_to "Sell", sell_path(stock), class: "btn btn-primary" %>
        </div>

      </div>
    </div>
    <% end %>
  </div>

  <% end %>


  <% else %>
  <h2>This stock does not exist.</h2>
  <% end %>

</div>
