<div class="form">
  <h1> Sign Up </h1>

  <%= form_for @user do |f| %>

  <%= render partial: '/partials/errors' %>

  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit "Sign Up" %>
  </p>
  <% end %>

</div>
